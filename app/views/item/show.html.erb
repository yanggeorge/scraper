<h1>数据项的详细情况</h1>

<div class="fancy">
<%= form_for :item ,url: item_update_path(@item.id) do |f| %>
    <p>
      <%= f.label :start_url %><br>
      <%= f.text_field :start_url , :size => 100 %>
    </p>
    <p>
      <%= f.label :spider_name %><br>
      <%= f.text_field :spider_name %>
    </p>
    <p>
      <%= f.label :item_name %><br>
      <%= f.text_field :item_name %>
    </p>
    <p>
      <%= f.label :item_xpath %><br>
      <%= f.text_field :item_xpath , :size => 100 %>
    </p>
    <p>
      <%= f.label :item_example %><br>
      <%= f.text_area :item_example , :size => "50x5" %>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>
</div>
<%= link_to 'Back', item_index_path %>